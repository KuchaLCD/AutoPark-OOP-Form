            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Naming}" 
                      Header="Name" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Whidth}" 
                      Header="Width" Width="64"/>
                    <GridViewColumn Header="Image" Width="135">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Path=Picture}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
