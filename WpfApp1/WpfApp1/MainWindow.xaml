<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Cascade" Height="450" Width="800" Icon="M&amp;A.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Enter" HorizontalAlignment="Left" Margin="305,265,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Height="19" Click="Button_Click"/>
        <TextBox x:Name="Login" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="23" Margin="305,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged_1"/>
        <Label Grid.ColumnSpan="2" Content="Login" HorizontalAlignment="Left" Margin="305,137,0,0" VerticalAlignment="Top"/>
        <Label Grid.ColumnSpan="2" Content="Password" HorizontalAlignment="Left" Margin="305,199,0,0" VerticalAlignment="Top"/>
        <Button Grid.ColumnSpan="2" Content="" HorizontalAlignment="Left" Margin="437,219,0,0" VerticalAlignment="Top" Width="32" Click="Button_Click_1" Height="29" RenderTransformOrigin="0.331,-0.007">
            <Button.Background>
                <ImageBrush ImageSource="eye.png"/>
            </Button.Background>
        </Button>
        <PasswordBox x:Name="PassBox" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="305,225,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="ShowingPass" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="18" Margin="305,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged_2" Visibility="Hidden"/>

    </Grid>
</Window>
