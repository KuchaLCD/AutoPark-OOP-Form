                    </Button.RenderTransform>
                </Button>
            </StackPanel>
            <StackPanel x:Name="AdditToolSecCategory" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" MaxWidth="240" MaxHeight="40" Height="38" Width="236" Visibility="Hidden">
