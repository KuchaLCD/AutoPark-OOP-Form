            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF180063"/>
                    <GradientStop Color="#FF7500C3" Offset="1"/>
                </LinearGradientBrush>
            </Canvas.Background>
            <Button Grid.Column="0" MinWidth="30" HorizontalAlignment="Left" VerticalAlignment="Top" MaxWidth="300" Background="#FF000086" Content="Car" Width="236" Height="64" Grid.Row="1" BorderBrush="#FF3900A3" Foreground="White" Click="Button_Click_2" Canvas.Top="43" />
