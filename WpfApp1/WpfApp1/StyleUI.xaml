                        </Style>
                    </Button.Resources>
                </Button>
                <Button Height="27" Width="66" Foreground="White" Content="Customers" Background="#FF410068" Margin="3,6,0,5.4" RenderTransformOrigin="0.5,0.5" Click="Button_Click_23">
