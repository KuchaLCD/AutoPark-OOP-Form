            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Naming}" Header="Наименование" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Mass}" Header="Масса(кг)" Width="64"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Whidth}" Header="Ширина(м)" Width="74"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=MaxSpeed}" Header="Скорость(км/ч)" Width="94"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=VolumeOfEngine}" Header="Объём двигателя(л)" Width="120"/>
                    <GridViewColumn Header="Изображение" Width="135">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Path=Picture}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Image x:Name="ImageSTYLE" Grid.Column="1" HorizontalAlignment="Right" Height="118" Margin="0,5.2,10.2,0" Grid.Row="2" VerticalAlignment="Top" Width="276" OpacityMask="White"/>
