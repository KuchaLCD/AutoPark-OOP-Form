            <StackPanel Name="AdditTool" Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" MaxWidth="240" MaxHeight="40" Height="38" Width="236">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF35006B" Offset="0.816"/>
                        <GradientStop Color="#FFA752FF" Offset="1"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="5,0,0,0"/>
                    </Style>
                </StackPanel.Resources>
                <Button Height="27" Width="70" Foreground="White" Content="Calc. Profit" Background="#FF410068" Margin="3,6,0,5.4" Click="Button_Click_10">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Height="27" Width="69" Foreground="White" HorizontalAlignment="Right" Content="Stay Price" Background="#FF410068" Margin="3,6,0,5.4" Click="Button_Click_8">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Height="27" Width="55" Foreground="White" Content="Clear" Background="#FF410068" Margin="3,6,0,5.4" RenderTransformOrigin="0.5,0.5" Click="Button_Click_9">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
